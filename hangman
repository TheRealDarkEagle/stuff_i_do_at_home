import java.util.Scanner;


public class Hangman {

	static int life = 3;
	private static Scanner sc;
	
	public static void main(String[] args) {
		String wort = insertWord();
		startGame(wort);
	}
	
	public static void startGame(String wort) {
		Hangman hang = new Hangman();
		Hangman.gameLogic(wort);
		
	}
	//eingabe des wortes 
	public static String insertWord() {
		System.out.println("Geben Sie bitte Ihr Wort ein!: ");
		sc = new Scanner(System.in);
		String wort = sc.next();
		wort = toSmall(wort);
		return wort;
		
	}
	//kleinschreibung des wortes
	public static String toSmall(String wort) {
		wort = wort.toLowerCase();
		return wort;
	}
	//ausgabe der unterstriche anhand länge von wort 
	public static void underscore(String wort) {
		char[] theWord = new char[wort.length()];
		for(int i=0;i<wort.length();i++) {
			System.out.print("_ ");
		}
	}
	//überprüfen ob char in Wort vorhanden ist  
	public static String gameLogic(String wort) {
		if(life != 0) {
			//gebe buchstaben ein der eingefügt werden soll 
			
			//
			
			
			
			return gameLogic(wort);
		}else {
			return "Sie haben Verloren! Nächstes mal klappt es bestimmt :)";
		}
	}
	//ausgabe der gefundenen buchstaben an der richtigen stelle im wort 
	//
	
	
	
	
}
